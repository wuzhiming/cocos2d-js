<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_cur_process_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_other_process_test_crash"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_other_process_test"
        android:layout_marginTop="19dp"
        android:text="@string/cur_process_test" />

    <Button
        android:id="@+id/btn_other_process_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_other_process_test_crash"
        android:layout_alignRight="@+id/btn_other_process_test_crash"
        android:layout_below="@+id/btn_cur_process_test"
        android:layout_marginTop="20dp"
        android:text="@string/other_process_test" />

    <Button
        android:id="@+id/btn_cur_process_test_crash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_other_process_test"
        android:layout_marginTop="29dp"
        android:text="@string/cur_process_test_crash"/>
    
    <Button
        android:id="@+id/btn_other_process_test_crash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_cur_process_test_crash"
        android:layout_marginTop="29dp"
        android:text="@string/other_process_test_crash"/>

</RelativeLayout>