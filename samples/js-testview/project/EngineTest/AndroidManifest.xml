<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cocos.EngineTest"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- 在SDCard中创建与删除文件权限 -->
<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

<!-- 往SDCard写入数据权限 -->
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cocos.EngineTest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cocos.EngineTest.CurProcessActivity"      
                  android:label="@string/cur_activity_name">      
            <intent-filter>      
                <action android:name="com.cocos.EngineTest.CurProcessActivity"/>   
            </intent-filter>      
        </activity> 
        <activity android:name="com.cocos.EngineTest.CurProcessCrashActivity"      
                  android:label="@string/cur_process_test_crash">      
            <intent-filter>      
                <action android:name="com.cocos.EngineTest.CurProcessCrashActivity"/>   
            </intent-filter>      
        </activity> 
        <activity android:name="com.cocos.EngineTest.OtherProcessActivity"      
                  android:label="@string/other_activity_name"    
                  android:process=":com.cocos.EngineTest.otherProcess">      
            <intent-filter>      
                <action android:name="com.cocos.EngineTest.OtherProcessActivity"/>      
                <category android:name="android.intent.category.DEFAULT"/>      
            </intent-filter>      
        </activity> 
        <activity android:name="com.cocos.EngineTest.OtherProcessCrashActivity"      
                  android:label="@string/other_activity_name"    
                  android:process=":com.cocos.EngineTest.OtherProcessCrashActivity">      
            <intent-filter>      
                <action android:name="com.cocos.EngineTest.OtherProcessCrashActivity"/>      
                <category android:name="android.intent.category.DEFAULT"/>      
            </intent-filter>      
        </activity> 
    </application>

</manifest>
